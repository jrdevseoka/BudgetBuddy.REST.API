{
  "name": "budgetbuddy.rest.api",
  "version": "1.0.0",
  "description": "BudgetBuddyAPI is a robust and flexible back-end API for a personal financial tracking application built using NestJS, JEST, TypeORM, MSSQL, Docker Containerization. The application empowers users to efficiently manage their financial data, including multiple accounts, transactions, reports, balances, and notifications",
  "main": "main.ts",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/jrdevseoka/BudgetBuddy.REST.API.git"
  },
  "author": "Seoka Moshele",
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "cross-env NODE_ENV=development nest start --watch",
    "start:debug": "cross-env NODE_ENV=development nest start --debug --watch",
    "start:prod": "cross-env NODE_ENV=production node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "prettier-format": "prettier --config .prettierrc \"{src,apps,libs,test}/**/*.ts\" --write",
    "prettier-watch": "onchange \"**/*\" -- prettier --write --ignore-unknown {{changed}}",
    "test": "jest",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "cross-env NODE_ENV=test jest --runInBand --inspect-brk -r tsconfig-paths/register -r ts-node/register",
    "test:e2e": "cross-env NODE_ENV=test jest --config ./test/jest-e2e.json",
    "docs": "compodoc -p compodoc.tsconfig.json -d docs",
    "postbuild": "npm run copy-secrets",
    "copy-secrets": "copyfiles -u 1 src/secrets/**/* dist/secrets"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.1.13",
    "@nestjs/typeorm": "^10.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "joi": "^17.11.0",
    "mssql": "^9.3.2",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.2.7",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.5.0",
    "onchange": "^7.1.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  }
}
